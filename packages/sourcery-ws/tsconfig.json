{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "lib": ["es2023", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
